<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
    <div class="profile-container">
        <div class="profile-card" id="profile">
            <div class="profile-image-container">
                <img src="user-image.jpg" alt="User Image" id="user-image" class="profile-image">
            </div>

            <!-- Foydalanuvchi nomi -->
            <div class="user-info">
                <span class="icon"><i class="fas fa-user-circle"></i></span>
                <h2 id="user-name">Abduqodir</h2>
            </div>
    
            <!-- Foydalanuvchi email -->
            <div class="user-info">
                <span class="icon"><i class="fas fa-envelope"></i></span>
                <p id="user-email">abduqodir@example.com</p>
            </div>
    
            <!-- Foydalanuvchi statusi -->
            <div class="user-info">
                <span class="icon"><i class="fas fa-check-circle"></i></span>
                <p id="user-status">Status: Regular</p>
            </div>

            <!-- Premium olish tugmasi -->
            <button class="premium-btn" onclick="openPremiumModal()">
                <span class="icon"><i class="fas fa-star"></i></span> Get Premium
            </button>

            <div class="premium-modal" id="premiumModal">
                <div class="premium-modal-content">
                    <span class="premium-close" onclick="closePremiumModal()">&times;</span>
                    <div class="premium-modal-icon"><i class="fas fa-gem"></i></div>
                    <h2>Premium Membership</h2>
                    <p>Get access to exclusive features and benefits!</p>
                    <button class="premium-confirm-btn" onclick="activatePremium()">
                        <i class="fas fa-thumbs-up"></i> Yes, Upgrade
                    </button>
                    <button class="premium-cancel-btn" onclick="closePremiumModal()">
                        <i class="fas fa-times"></i> No, Thanks
                    </button>
                </div>
            </div>

            <div class="profile-actions">
                <button class="edit-btn" onclick="editProfile()"><i class="fas fa-edit"></i> Edit Profile</button>
                <button class="logout-btn" onclick="showLogoutModal()"><i class="fas fa-sign-out-alt"></i> Log
                    Out</button>
            </div>
        </div>
    </div>

    <!-- Edit Profile Modal -->
    <div id="editProfileModal" class="modal">
        <div class="modal-content edit-profile-modal-content">
            <span class="close-btn" onclick="closeModal('editProfileModal')">&times;</span>
            <h2><i class="fas fa-user-edit"></i> Edit Your Profile</h2>

            <form id="editProfileForm" class="edit-profile-form" enctype="multipart/form-data">
                <!-- Profil rasmi uchun yangi rasm yuklash qismi -->
                <!-- Profil rasmi uchun yangi rasm yuklash qismi -->
                <div class="form-group">
                    <label><i class="fas fa-image"></i> Profile Picture</label>
                    <div class="image-preview-container">
                        <img id="profile-image-preview" src="" alt="Profile Preview">
                    </div>
                    <label class="custom-upload-btn" for="profile-image-upload"><i class="fas fa-upload"></i> Upload New
                        Image</label>
                    <input type="file" id="profile-image-upload" accept="image/*" onchange="previewImage(event)">
                </div>


                <div class="form-group">
                    <label for="edit-username"><i class="fas fa-user"></i> Username</label>
                    <input type="text" id="edit-username" name="username" placeholder="Enter your username" required>
                </div>

                <div class="form-group">
                    <label for="edit-email"><i class="fas fa-envelope"></i> Email</label>
                    <input type="email" id="edit-email" name="email" placeholder="Enter your email" required>
                </div>

                <button type="button" class="save-btn" onclick="saveProfile()"><i class="fas fa-save"></i> Save
                    Changes</button>
            </form>
        </div>
    </div>



    <!-- Log Out Modal -->
    <div id="logoutModal" class="modal2">
        <div class="modal-content2 logout-modal-content">
            <span class="close-btn" onclick="closeModal('logoutModal')">&times;</span>
            <h2><i class="fas fa-sign-out-alt"></i> Log Out</h2>
            <p>Are you sure you want to log out?</p>
            <div class="logout-actions">
                <button class="confirm-btn" onclick="logout()">Yes, Log Out</button>
                <button class="cancel-btn" onclick="closeModal('logoutModal')">Cancel</button>
            </div>
        </div>
    </div>


    <script src="/js/profile.js"></script>
</body>

</html>